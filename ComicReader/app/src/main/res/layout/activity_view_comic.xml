<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewComicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/columnColor">

        <View
            android:id="@+id/chapter_back"
            android:background="@drawable/ic_chevron_left_black_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt_chapter_name"
            android:layout_width="316dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/chapter_back"
            android:gravity="center_horizontal"
            android:text="@string/no_page_number"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/chapter_next"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_chevron_right_black_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.viewpager.widget.ViewPager>
